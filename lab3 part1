def ing1(bun):
    print (f'А теперь добавим:{bun} булочки')

def ing2(cutlets):
    print (f'А теперь добавим:{cutlets} котлету')

def ing3(cucumbers):
    print (f'А теперь добавим:{cucumbers} огурчика')

def ing4(tomato):
    print (f'А теперь добавим:{tomato} помидорки')

def ing5(mayonnaise):
    print (f'А теперь добавим:{mayonnaise} ложки майонеза')

def ing6(cheese):
    print (f'А теперь добавим:{cheese} ломтика сыра')
def ing7(becon):
    print (f'А теперь добавим:{becon} ломтика бекона')
def ing8(ketchup):
    print (f'А теперь добавим:{ketchup} ложки кетчупа')
    
    
  import simple_draw as sd
sd.resolution = (800, 800)
sd.background_color = sd.COLOR_WHITE
for y in range(400, -50, -50):
    for x in range(600, -100 , -100):
        point_1 = sd.get_point(x, y - 50)
        point_2 = sd.get_point(x + 100, y)
        sd.rectangle(point_1, point_2, color = sd.COLOR_YELLOW, width = 1)
        point_1 = sd.get_point(0 , 400)
        point_2 = sd.get_point(350,  600)
        sd.line(start_point = point_1, end_point = point_2, color = sd.COLOR_DARK_RED, width = 7)
        point_1 = sd.get_point(700 , 400)
        point_2 = sd.get_point(350,  600)
        sd.line(start_point = point_1, end_point = point_2, color = sd.COLOR_DARK_RED, width = 7)
        #for i in range(200, - 50, -50):
        #    for j in range (500, - 50, -50):
        point_1 = sd.get_point(200, 100)
        point_2 = sd.get_point(500, 300)
        sd.rectangle(point_1, point_2, color = sd.COLOR_BLUE, width = 7)
        #point_list = [point_1, point_2]
        #sd.lines(point_list=point_list, color=sd.COLOR_BLUE, width=3)


sd.pause()  
    
    
    
    

