# модуль из которого брались функции
def ing1(bun):
    print (f'А теперь добавим:{bun} булочки')

def ing2(cutlets):
    print (f'А теперь добавим:{cutlets} котлету')

def ing3(cucumbers):
    print (f'А теперь добавим:{cucumbers} огурчика')

def ing4(tomato):
    print (f'А теперь добавим:{tomato} помидорки')

def ing5(mayonnaise):
    print (f'А теперь добавим:{mayonnaise} ложки майонеза')

def ing6(cheese):
    print (f'А теперь добавим:{cheese} ломтика сыра')
def ing7(becon):
    print (f'А теперь добавим:{becon} ломтика бекона')
def ing8(ketchup):
    print (f'А теперь добавим:{ketchup} ложки кетчупа')
